#!/bin/sh

set -e
# systemctl stop mw-agent
# systemctl disable mw-agent

# Stop and disable mw-agent service if running
if systemctl is-active --quiet mw-agent 2>/dev/null; then
    systemctl stop mw-agent
fi

if systemctl is-enabled --quiet mw-agent 2>/dev/null; then
    systemctl disable mw-agent
fi

# Stop and disable mw-agent-opamp service if running
if systemctl is-active --quiet mw-agent-opamp 2>/dev/null; then
    systemctl stop mw-agent-opamp
fi

if systemctl is-enabled --quiet mw-agent-opamp 2>/dev/null; then
    systemctl disable mw-agent-opamp
fi

